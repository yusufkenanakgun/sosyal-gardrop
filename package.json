{
  "name": "sosyal-gardrop",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:core": "turbo run dev --filter=@sg/web --filter=@sg/api --filter=@sg/mobile",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "prepare": "husky install",
    "infra:up": "cd infra && docker compose up -d",
    "infra:down": "cd infra && docker compose down -v",
    "web:dev": "pnpm --filter @sg/web dev",
    "api:dev": "pnpm --filter @sg/api start:dev",
    "mobile:dev": "pnpm --filter @sg/mobile start",
    "ai:dev": "pnpm --filter @sg/ai dev",
    "ai:build": "pnpm --filter @sg/ai build",
    "ai:start": "pnpm --filter @sg/ai start",
    "postinstall": "pnpm -r --filter @sg/api prisma generate"
  },
  "devDependencies": {
    "@eslint/js": "9.14.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@types/node": "20.14.12",
    "@typescript-eslint/eslint-plugin": "8.12.2",
    "@typescript-eslint/parser": "8.12.2",
    "babel-plugin-module-resolver": "5.0.2",
    "eslint": "9.14.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.4.0",
    "husky": "8.0.0",
    "prisma": "6.18.0",
    "turbo": "2.1.3",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.46.2"
  },
  "pnpm": {
    "overrides": {
      "eslint": "9.14.0",
      "@eslint/js": "9.14.0"
    }
  }
}
