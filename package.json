{
  "name": "sosyal-gardrop",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:core": "turbo run dev",
    "dev": "turbo dev",
    "typecheck": "turbo typecheck",
    "prepare": "husky install",
    "infra:up": "cd infra && docker compose up -d",
    "infra:down": "cd infra && docker compose down -v",
    "web:dev": "pnpm --filter @sg/web dev",
    "api:dev": "pnpm --filter @sg/api start:dev",
    "mobile:dev": "pnpm --filter @sg/mobile start",
    "ai:dev": "pnpm --filter @sg/ai dev",
    "ai:build": "pnpm --filter @sg/ai build",
    "ai:start": "pnpm --filter @sg/ai start",
    "db:generate": "pnpm --filter @sg/api prisma generate",
    "db:migrate:deploy": "pnpm --filter @sg/api prisma migrate deploy"
  },
  "devDependencies": {
    "@eslint/js": "9",
    "@next/eslint-plugin-next": "^16.0.1",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "husky": "^9.1.6",
    "prisma": "^6.18.0",
    "turbo": "^2.5.8",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.20.0"
  }
}
